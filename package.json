{
  "name": "attendance-system-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:development": "cross-env NODE_ENV=development node dist/src/main.js",
    "start:stage": "cross-env NODE_ENV=stg node dist/src/main.js",
    "start:prod": "cross-env NODE_ENV=prod node dist/src/main.js",
    "start:test": "cross-env NODE_ENV=test nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed:admin": "ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts admin",
    "seed:admin:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts admin",
    "seed:admin:stg": "cross-env NODE_ENV=stg ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts admin",
    "seed:admin:prod": "cross-env NODE_ENV=prod ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts admin",
    "seed:employees": "ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts employees",
    "seed:employees:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts employees",
    "seed:employees:stg": "cross-env NODE_ENV=stg ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts employees",
    "seed:employees:prod": "cross-env NODE_ENV=prod ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts employees",
    "seed:all": "ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts all",
    "seed:all:dev": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts all",
    "seed:all:stg": "cross-env NODE_ENV=stg ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts all",
    "seed:all:prod": "cross-env NODE_ENV=prod ts-node -r tsconfig-paths/register src/database/seeds/run-seed.ts all",
    "migrate": "ts-node -r tsconfig-paths/register src/database/migrations/run-migrations.ts",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:status": "sequelize-cli db:migrate:status"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/sequelize": "^11.0.1",
    "@nestjs/swagger": "^11.2.3",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "express": "^4.18.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.5",
    "sequelize-typescript": "^2.1.6",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "sequelize-cli": "^6.6.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
